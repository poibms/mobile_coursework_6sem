<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/news_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="7dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView android:id="@+id/collect_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Collection name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <TextView android:id="@+id/collect_tags"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="salt, sugar, fork, cutting board..."
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/collect_description"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="salt, sugar, fork, cutting board..."
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#4E4E4E" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <Button android:id="@+id/collection_btn"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TO Collection"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
